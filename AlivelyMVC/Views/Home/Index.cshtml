@model AlivelyMVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div id="login">
    <form asp-action="Login" asp-controller="Home" method="post" role="form">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">
                    Welcome to Alively!
                </h2>
                <h5>Please Login or  <a class="nav-link link-primary" asp-controller="Home" asp-action="Signup" style="width: 35%;">Signup here </a></h5>
            </div>
            <div class="form-group">
                <label for="specific-goal" class="form-label mt-4">Username:</label>
                <input type="text" class="form-control" id="specific-goal" asp-for="Username" placeholder="Enter your username...">
            </div>
            <div class="form-group">
                <label for="specific-goal" class="form-label mt-4">Password:</label>
                <input type="password" class="form-control" id="specific-goal" asp-for="Password" placeholder="Enter your password...">
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width: fit-content; margin-left: 15px;">Login</button>
    </form>
</div>

@section Scripts
    {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }

    <style>
        #login{
            width:50%;
            margin:auto;
        }
    </style>