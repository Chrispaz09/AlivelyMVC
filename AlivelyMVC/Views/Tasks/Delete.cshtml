@model AlivelyMVC.ViewModels.TaskViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Delete" asp-controller="Tasks">
    <input asp-for="Uuid" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Task
            </h2>
        </div>
        <p class="text-danger">
            This action cannot be undone.
        </p>
        <div class="form-group">
          <label for="title" class="form-label mt-4"><b>Title:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="title" asp-for="Title">
        </div>
       <div class="form-group">
          <label for="objective" class="form-label mt-4"><b>Objective:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="objective" asp-for="Objective" >
        </div>
       <div class="form-group">
          <label for="relevance" class="form-label mt-4"><b>Relevance:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="relevence" asp-for="Relevance"  >
        </div>
         <div class="form-group">
          <label for="importance" class="form-label mt-4"><b>Importance:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="importance" asp-for="Value" >
        </div>
         <div class="form-group">
          <label for="deadline" class="form-label mt-4"><b>Deadline:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="deadline" asp-for="Deadline" >
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width: fit-content;">Delete</button>
        <a asp-controller="Tasks" asp-action="Index" class="btn btn-danger" style="width: fit-content;" ><i class="bi bi-arrow-return-left"></i> Go Back </a>
    </div>
</form>
