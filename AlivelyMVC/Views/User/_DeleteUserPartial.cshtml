@model AlivelyMVC.ViewModels.UserViewModel

<div class="modal fade" id="deleteusermodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the account with the username "@Model.UserName" ?</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger" asp-action="DeleteUser" asp-controller="User" asp-route-userUuid="@Model.Uuid" action="get">Yes</a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>