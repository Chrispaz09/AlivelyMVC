@model SMARTGoal
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete SMART Goal
            </h2>
            
        </div>
        <p class="text-danger">This will delete any task associated to this goal.
        <br />
        This action cannot be undone.
        </p>
        <div class="form-group">
          <label for="specific-goal" class="form-label mt-4"><b>Specify the goal:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="specific-goal" asp-for="Target" placeholder="State what you'll do..." disabled>
          <span asp-validation-for="Target" class="text-danger" ></span>
        </div>
       <div class="form-group">
          <label for="measurable-goal" class="form-label mt-4"><b>How will it be measured?:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="measurable-goal" asp-for="Measure" placeholder="Provide a way to evaluate..." disabled>
          <span asp-validation-for="Measure" class="text-danger" ></span>
        </div>
       <div class="form-group">
          <label for="relevent-goal" class="form-label mt-4"><b>How is it achievable?:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="relevent-goal" asp-for="Plan" placeholder="Ask if it's within your scope..." disabled>
          <span asp-validation-for="Plan" class="text-danger" ></span>
        </div>
         <div class="form-group">
          <label for="relevant-goal" class="form-label mt-4"><b>How is it relevant?:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="relevant-goal" asp-for="Execution" placeholder="Ask if it's relevant to your life..." disabled>
          <span asp-validation-for="Execution" class="text-danger" ></span>
        </div>
         <div class="form-group">
          <label for="timebound-goal" class="form-label mt-4"><b>What is your target date?:</b></label>
          <input type="text" readonly="" class="form-control-plaintext" id="timebound-goal" asp-for="AchieveDate" placeholder="Choose a realistic time-frame of when you should achieve it..." disabled>
          <span asp-validation-for="AchieveDate" class="text-danger" ></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" style="width: fit-content;">Delete</button>
        <a asp-controller="SMARTGoals" asp-action="Index" class="btn btn-primary" style="width: fit-content;" ><i class="bi bi-arrow-return-left"></i> Go Back </a>
    </div>
</form>
    
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

